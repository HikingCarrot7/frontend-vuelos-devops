pipeline {
    agent any
    stages {
        stage('Deploy') {
            steps {
                sh "docker build -t front-vuelos-" + env.GIT_BRANCH + ":1.0.0-" + env.BUILD_NUMBER + " ."
                sh "docker ps | grep front-vuelos-" + env.GIT_BRANCH + " | awk '{print \$1}' | xargs -r docker stop &>/dev/null"

                script {

                    if(isUnix()) {
                        sh "docker run -d --network=host front-vuelos-" + env.GIT_BRANCH + ":1.0.0-" + env.BUILD_NUMBER
                    } else {
                        sh "docker run -d -p 8000:80 devops-vuelos-" + env.GIT_BRANCH + ":1.0.0-" + env.BUILD_NUMBER
                    }

                }


                echo 'App deployed!'
            }
        }
    }
}