pipeline {
    agent any
    stages {
        stage('Install dependencies') {
            steps {
                sh "npm install"
            }
        }
        
        stage('Test') {
            steps {
                sh "npm test"
            }
        }
        
        stage('Build') {
            steps {
                sh "CI=false npm run build"
            }
        }
    }
    
    post {
        success {
            echo "Build pipeline completed!"
            build job: "front-vuelos-deploy"
        }
    }
}